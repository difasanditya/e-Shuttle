extends layout

block content
  form(id='editProfile', method='POST', class='card p-4')
    div.mb-3
      label(for='name')='Name'
      input(type='text', class='form-control', id='name', placeholder='', value=name)
      div.invalid-feedback='Please enter a valid name.'
    div.row
      div(class='col-md-6 mb-3')
          label(for='nip')='NIP'
          input(type='text', class='form-control', id='nip', placeholder='', value=nip)
          div.invalid-feedback='Please enter a valid number.'
      div(class='col-md-6 mb-3')
          label(for='division')='Division'
          input(type='text', class='form-control', id='division', placeholder='', value=division)
          div.invalid-feedback='Please enter a valid division.'
    input(class='btn btn-dark', type='submit', value='Save Changes')